touch arithmetic.sh

#!/bin/bash

# Shell Script to Perform Basic Arithmetic Operations

echo "Welcome to Arithmetic Operations!"

# Taking two numbers from user
read -p "Enter the first number: " num1
read -p "Enter the second number: " num2

# Displaying operation choices
echo "Select the operation:"
echo "1. Addition (+)"
echo "2. Subtraction (-)"
echo "3. Multiplication (*)"
echo "4. Division (/)"

# Reading user choice
read -p "Enter your choice (1/2/3/4): " choice

# Performing calculation based on user choice
case $choice in
  1)
    result=$((num1 + num2))
    echo "Result: $num1 + $num2 = $result"
    ;;
  2)
    result=$((num1 - num2))
    echo "Result: $num1 - $num2 = $result"
    ;;
  3)
    result=$((num1 * num2))
    echo "Result: $num1 * $num2 = $result"
    ;;
  4)
    if [ "$num2" -eq 0 ]; then
      echo "Error: Division by zero is not allowed!"
    else
      result=$((num1 / num2))
      echo "Result: $num1 / $num2 = $result"
    fi
    ;;
  *)
    echo "Invalid choice. Please choose 1, 2, 3, or 4."
    ;;
esac


chmod +x arithmetic.sh
./arithmetic.sh

//commands

echo "ðŸ”µ Build is starting... Welcome Developer!"

clear

exit

date

time ./your_script.sh

time ./arithmetic.sh
exit
